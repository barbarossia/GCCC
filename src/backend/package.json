{
  "name": "gccc-backend",
  "version": "1.0.0",
  "description": "GCCC DApp Backend Service - Web3 governance platform with staking, proposals, and NFT features",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run lint && npm run test",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "migrate": "node scripts/migrate.js",
    "migrate:rollback": "node scripts/migrate.js --rollback",
    "migrate:make": "node scripts/migrate.js --make",
    "seed": "node scripts/seed.js",
    "db:reset": "npm run migrate:rollback && npm run migrate && npm run seed",
    "deploy": "pm2 start ecosystem.config.js",
    "pm2:status": "pm2 status",
    "pm2:logs": "pm2 logs",
    "pm2:restart": "pm2 restart gccc-backend",
    "pm2:stop": "pm2 stop gccc-backend",
    "pm2:delete": "pm2 delete gccc-backend",
    "health:db": "node scripts/health-check.js --db",
    "health:redis": "node scripts/health-check.js --redis",
    "perf:report": "node scripts/performance-report.js",
    "docs:generate": "node scripts/generate-docs.js",
    "security:audit": "npm audit && node scripts/security-check.js"
  },
  "keywords": [
    "web3",
    "dapp",
    "solana",
    "defi",
    "staking",
    "nft",
    "governance",
    "blockchain",
    "cryptocurrency",
    "nodejs",
    "express",
    "postgresql",
    "redis"
  ],
  "author": {
    "name": "GCCC Development Team",
    "email": "dev@gccc.com",
    "url": "https://gccc.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gccc-org/backend.git"
  },
  "bugs": {
    "url": "https://github.com/gccc-org/backend/issues"
  },
  "homepage": "https://github.com/gccc-org/backend#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0",
    "express-validator": "^7.0.1",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^2.0.1",
    "pg": "^8.11.3",
    "pg-pool": "^3.6.1",
    "redis": "^4.6.10",
    "ioredis": "^5.3.2",
    "@solana/web3.js": "^1.87.6",
    "@solana/spl-token": "^0.3.9",
    "@metaplex-foundation/js": "^0.20.1",
    "@project-serum/anchor": "^0.26.0",
    "tweetnacl": "^1.0.3",
    "bs58": "^5.0.0",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "nodemailer": "^6.9.7",
    "axios": "^1.6.2",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "ipfs-http-client": "^60.0.1",
    "uuid": "^9.0.1",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "crypto-js": "^4.2.0",
    "@sentry/node": "^7.81.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "@types/jest": "^29.5.8",
    "cross-env": "^7.0.3",
    "concurrently": "^8.2.2"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "api/**/*.js",
      "services/**/*.js",
      "middleware/**/*.js",
      "utils/**/*.js",
      "!**/node_modules/**",
      "!**/tests/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "env": {
      "node": true,
      "jest": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "semi": [
        "error",
        "always"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "indent": [
        "error",
        2
      ]
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 80,
    "endOfLine": "lf"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
